{
  "compilerOptions": {
      "target": "es5",
      "plugins": [
        {
          "name": "ts-graphql-plugin",
          "schema": "path-to-your-schema.json",
          "tag": "gql" 
        }
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": false,
      "noImplicitAny": false,
      "sourceMap": true,
      "removeComments": false,
      "noLib": false,
      "jsx": "react",
      "lib": [
        "es6",
        "dom"
      ],
      "baseUrl": "./js",
      "paths": {
       
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "rootDir": ".",
      "typeRoots": [
        "node_modules/@types",
        "typings/modules"
      ]
  },

  "include": [
    "js/**/*"
  ],
  "exclude": [
    "typings/browser.d.ts",
    "typings/browser",
    "node_modules",
    "typings/main",
    "typings/main.d.ts",
    "typings/index.d.ts"
  ]
}
